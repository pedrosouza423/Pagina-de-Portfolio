{% extends "layout.njk" %}

{% block head %}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet">
{% endblock%}

{% block content %}
    <!--Wrapper-->
    <div id="wrapper">
        <h1>Aulas</h1>
        
    </div>

    <!--Cards-->
    <section class="cards">

        {% for item in items%}
        <div class="card" id="{{item.id}}">
            <div class="card-image {{ 'featured-wrapper' if item.featured }}">
                <img src="https://img.youtube.com/vi/{{item.id}}/mqdefault.jpg" alt="Imagem de {{item.title}}">
                {% if item.featured %}
                    <div class="featured">Featured</div>
                {% endif %}
            </div>
    
            <div class="card-conteudo">
                <p>{{item.title}}</p>
            </div>
    
            <div class="card-info">
                <p>{{item.duration}}</p>
                <div class="card-price">{{item.price}}</div>
            </div>
        </div>
        {% endfor %}

    </section>
    
    <script src="/scripts.js"></script>
{% endblock %}